{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "./",
    "moduleResolution": "node",
    "isolatedModules": true,
    "importsNotUsedAsValues": "error",
    "ignoreDeprecations": "5.0",
    "strictNullChecks": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types",
      "customTypes/*"
    ],
    "experimentalDecorators": true,
    "outDir": "compiledjs/shutup",
    "lib": [
      "dom",
      "es6",
      "ESNext"
    ]
  },
  "include": [
    "./",
    "./index.ts"
  ],
  "exclude": []
}